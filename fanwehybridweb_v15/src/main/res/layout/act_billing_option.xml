<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_activity"
                android:orientation="vertical">
    <!--开单会员-->
    <com.fanwe.hybrid.customview.CommonRowView
        android:id="@+id/crv_store"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:crvLeftTxt="开单门店"
        app:crvRightTvColor="@color/res_text_gray_l"
        app:crvRightTxt="未选择"/>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/crv_store"
        android:background="@color/white"
        android:paddingLeft="@dimen/ipay_margin_10"
        android:paddingRight="@dimen/ipay_margin_10"
    >
        <TextView
            android:id="@+id/tv_billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="开单会员"
            android:textColor="@color/res_text_gray_l"
            android:textSize="@dimen/res_text_m"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请填写会员手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingRight="@dimen/ipay_margin_8"
            android:textColor="@color/res_text_gray_s"
            android:textColorHint="@color/res_text_gray_s"
            android:textSize="@dimen/res_text_m"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_img_add"/>
    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_qr"
        android:layout_marginTop="@dimen/ipay_margin_10"
        android:gravity="center"
        android:text="未注册的会员请先扫码注册"
        android:textColor="@color/res_text_gray_s"
        android:textSize="@dimen/res_text_m"/>
    <Button
        android:id="@+id/btn_billing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/ipay_margin_10"
        android:background="@drawable/shape_rectangle_textcontent_stroke_red"
        android:text="开单"
        android:textColor="@color/red"/>
</RelativeLayout>