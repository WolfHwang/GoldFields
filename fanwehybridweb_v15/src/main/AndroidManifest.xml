<?xml version="1.0" encoding="utf-8"?><!-- 修改之处一包名package 内置版本号versionCode 外置版本号versionName -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.szruito.goldfields">

    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <!-- 打开相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 缓存资源优先存入SDcard 下载安装有关 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许应用程序联网，以便向我们的服务器端发送数据 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 改变网络状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 更改无线网络状态 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 访问网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 访问无线网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- 腾讯定位 sdk 要求的权限  (开始) -->
    <!-- 通过GPS得到精确位置 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 通过网络得到粗略位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 腾讯定位 sdk 要求的权限 (结束) -->
    <application
        android:name="com.szruito.goldfields.app.App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/FullScreenNormal"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- android:name="com.szruito.goldfields.activity.TestActivity" -->
        <activity
            android:name="com.szruito.goldfields.activity.SplashActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="true"
            android:label="黄金原野"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.szruito.goldfields.utils.ApkInstallReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>

        <!-- 解决android 7.0 以上版本自动更新不安装问题 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.szruito.goldfields.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <!-- 网络状态监听广播 -->
        <receiver android:name="com.szruito.goldfields.netstate.TANetworkStateReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.gzcpc.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- 广告轮播页面 InitAdvActivity -->
        <!-- 全屏测试页面 FullsreenActivity -->


        <!-- &lt;!&ndash; 主页面 &ndash;&gt; -->
        <activity
            android:name="com.szruito.goldfields.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenNormal" />

        <activity
            android:name="com.szruito.goldfields.activity.InitAdvActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenNormal" />


        <!-- shareSDK begin -->
        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <data android:scheme="tencent1104646053" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- shareSDK end -->

        <activity
            android:name="com.szruito.goldfields.wxapi.WXEntryActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.szruito.goldfields.activity.WebActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <service
            android:name="com.szruito.goldfields.activity.ContactIntentService"
            android:exported="false" />
        <service
            android:name="com.szruito.goldfields.service.AppUpgradeService"
            android:exported="false" />

    </application>

</manifest>